<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="page_text">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowRadius">20</item>
        <item name="android:shadowDy">10</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="SpicesList">
        <item name="android:layout_height">60dp</item>
        <item name="android:textAllCaps">true</item>
        <!--<item name="android:textSize"></item>-->
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>

    </style>
<style name="CircularProgress" parent="Theme.AppCompat.Light">
    <item name="colorAccent">@color/colorPrimary</item>
</style>

</resources>
